        function typeWriter() {
            if (!target) return;
            if (typing) {
                if (index <= text.length) {
                    target.textContent = text.slice(0, index++);
                    setTimeout(typeWriter, 60);
                } else {
                    typing = false;
                    setTimeout(typeWriter, 2000);
                }
            } else {
                if (index >= 0) {
                    target.textContent = text.slice(0, index--);
                    setTimeout(typeWriter, 40);
                } else {
                    setTimeout(() => {
                        typing = true;
                        isEnglish = !isEnglish;

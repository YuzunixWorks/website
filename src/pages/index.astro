            }
        }

        .reveal {
            opacity: 0;
            transform: translateY(40px);
            transition:
                opacity 0.7s ease,
                transform 0.7s ease;
        }

        .reveal.show {
            opacity: 1;
            transform: none;
        }
    </style>

    <script is:inline>
        const jp = "創造と技術で、未来をかたちにする。";
        const en = "Shaping the future through creativity and technology.";
        const target = document.getElementById("slogan-text");
        let isEnglish = false,
            index = 0,
            text = jp,
            typing = true;

        function typeWriter() {
            if (!target) return;
            if (typing) {
                if (index <= text.length) {
                    target.textContent = text.slice(0, index++);
                    setTimeout(typeWriter, 60);
                } else {
                    typing = false;
                    setTimeout(typeWriter, 2000);
                }
            } else {
                if (index >= 0) {
                    target.textContent = text.slice(0, index--);
                    setTimeout(typeWriter, 40);
                } else {
                    setTimeout(() => {
                        typing = true;
                        isEnglish = !isEnglish;
                        text = isEnglish ? en : jp;
                        index = 0;
                        typeWriter();
                    }, 150);
                }
            }
        }

        function initStarfield() {
            const canvas = document.getElementById("starfield");
            if (!canvas) return;
            const ctx = canvas.getContext("2d");
            let stars = [];
            const STAR_COUNT = 120;
            const BASE_SPEED = 0.15;
            const STAR_SIZE = [0.3, 1.4];

            function resize() {
                const dpr = window.devicePixelRatio || 1;
                canvas.width = innerWidth * dpr;
                canvas.height = innerHeight * dpr;
                ctx.setTransform(dpr, 0, 0, dpr, 0, 0);
                stars = Array.from({ length: STAR_COUNT }, () => ({
                    x: Math.random() * innerWidth,
                    y: Math.random() * innerHeight,
                    r:
                        Math.random() * (STAR_SIZE[1] - STAR_SIZE[0]) +
                        STAR_SIZE[0],
                    s: Math.random() * 0.6 + 0.2,
                }));
            }

            function render() {
                ctx.clearRect(0, 0, innerWidth, innerHeight);
                ctx.fillStyle = "rgba(255,255,255,.9)";
                stars.forEach((star) => {
                    ctx.globalAlpha = star.s;
                    ctx.beginPath();
                    ctx.arc(star.x, star.y, star.r, 0, Math.PI * 2);
                    ctx.fill();
                    star.y += star.s + BASE_SPEED;
                    if (star.y > innerHeight) star.y = 0;
                });
                requestAnimationFrame(render);
            }

            resize();
            render();
            window.addEventListener("resize", resize);
        }

        function initReveal() {
            const sections = document.querySelectorAll(".reveal");
            const io = new IntersectionObserver(
                (entries) =>
                    entries.forEach((e) => {
                        if (e.isIntersecting) {
                            e.target.classList.add("show");
                            io.unobserve(e.target);
                        }
                    }),
                { threshold: 0.15 },
            );
            sections.forEach((s) => io.observe(s));
        }

        window.addEventListener("DOMContentLoaded", () => {
            typeWriter();
            initStarfield();
            initReveal();
        });
    </script>

    <style>
